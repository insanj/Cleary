TARGET=:clang
ARCHS = armv7 arm64
include theos/makefiles/common.mk

BUNDLE_NAME = CLPreferences
CLPreferences_FILES = CLPreferences.xm
CLPreferences_INSTALL_PATH = /Library/PreferenceBundles
CLPreferences_FRAMEWORKS = UIKit
CLPreferences_PRIVATE_FRAMEWORKS = Preferences

include $(THEOS_MAKE_PATH)/bundle.mk

internal-stage::
	$(ECHO_NOTHING)mkdir -p $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences$(ECHO_END)
	$(ECHO_NOTHING)cp entry.plist $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences/CLPreferences.plist$(ECHO_END)